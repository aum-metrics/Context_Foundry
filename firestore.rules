rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Get user data from users collection
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if user belongs to an organization
    function belongsToOrg(orgId) {
      return isSignedIn() && getUserData().orgId == orgId;
    }

    // Users collection: User can only read/write their own document
    match /users/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }

    // Organizations and their subcollections
    match /organizations/{orgId} {
      // Basic org info access
      allow read: if belongsToOrg(orgId);
      
      // Admin might need to update org settings (limited for now)
      allow write: if belongsToOrg(orgId) && getUserData().role == 'admin';

      // Recursively allow access to all subcollections if user belongs to org
      match /{allSubcollections=**} {
        allow read, write: if belongsToOrg(orgId);
      }
    }

    // Public Assets (if any)
    match /public/{doc=**} {
      allow read: if true;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}