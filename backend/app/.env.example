# AUM Analytics API - Environment Configuration Template
# Copy this to .env and fill in your real credentials

# Application Settings
ENV=development
DEBUG=True

# --- Core API Keys ---
# Get these from https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# Get these from https://aistudio.google.com
GEMINI_API_KEY=your_gemini_api_key_here

# Get these from https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# --- Firebase / Firestore ---
# Path to your Firebase service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=/absolute/path/to/your/service-account.json

# --- Payments (Razorpay) ---
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# --- Security ---
JWT_SECRET=your_jwt_secret_key_change_in_production
ALGORITHM=HS256

# --- Cron / Jobs ---
CRON_SECRET=aum-cron-2025
